<!DOCTYPE html>
<html>

<head>
  <link href="/css/tarefas-style.css" rel="stylesheet" type="text/css">
  <title>Tarefas</title>
</head>

<body>
  <div class="main">
    <div class="form">
      <form method="post" action="/tarefas">
        <input type="text" name="titulo" placeholder="TÃ­tulo da tarefa" />
        <button type="submit">Adicionar</button>
      </form>
    </div>
    <div class="lista-tarefas">
      <h2>Lista de Tarefas</h2>
      <div>
        <table>
          <tbody>
            <% tarefas.forEach(function (tarefa) { %>
              <tr>
                <td>
                  <% let checkBoxId=`check-${tarefa.id}` %>
                    <input type="checkbox" id="<%= checkBoxId %>" name="<%= checkBoxId %>" <%=tarefa.concluida
                      ? 'checked' : '' %>
                    />
                    <label for="<%= checkBoxId %>">
                      <%= tarefa.titulo %>
                    </label>
                </td>
                <td>
                  <a href="#">
                    <img src="/img/trash.svg" width="16" height="16" />
                  </a>
                </td>
              </tr>
              <% }) %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</body>

</html>